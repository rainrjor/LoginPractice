<Window x:Class="LoginPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoginPractice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label Content="User ID" HorizontalAlignment="Left" Margin="100,73,0,0" VerticalAlignment="Top" Height="76" Width="138" FontSize="36"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="100,0,0,0" VerticalAlignment="Center" Height="76" Width="181" FontSize="36"/>
        <TextBox x:Name="user_txt" HorizontalAlignment="Left" Margin="358,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="76" Width="322"/>
        <TextBox x:Name="pass_txt" HorizontalAlignment="Left" Margin="358,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="324" Height="76"/>
        <Button x:Name="login_btn" Content="Login" HorizontalAlignment="Center" Margin="0,301,0,0" VerticalAlignment="Top" Height="55" Width="150" Click="login_btn_Click"/>

    </Grid>
</Window>
